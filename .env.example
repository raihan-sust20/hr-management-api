# Possible values: development, production, test
NODE_ENV=development
HOST=
PORT=5001

DB_HOST=localhost
DB_PORT=5432
DB_NAME=
DB_USER=postgres
DB_PASSWORD=
DB_POOL_MIN=2
DB_POOL_MAX=10

# Comma-separated list of allowed origins for CORS
# (e.g., http://localhost:3000,http://example.com)
CORS_ORIGIN=http://localhost:5001

JWT_SECRET=
JWT_REFRESH_SECRET=
# Token expiry times (e.g., 15m for 15 minutes, 7d for 7 days)
JWT_ACCESS_EXPIRY=
# Refresh token expiry time (e.g., 7d for 7 days)
JWT_REFRESH_EXPIRY=

# Max file size for photo uploads (in bytes, e.g., 5MB = 5242880)
MAX_FILE_SIZE=5242880

# Start of business hours (0-23, in UTC)
BUSINESS_HOURS_START=6
# End of business hours (0-23, in UTC)
BUSINESS_HOURS_END=22
# Maximum days back for attendance entry
RETROACTIVE_LIMIT_DAYS=7
